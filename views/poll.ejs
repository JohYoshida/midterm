<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Poll</title>
    <% include ./partials/head.ejs %>

  </head>
  <body>
    <% include ./partials/header.ejs %>

    <div class="container main">
      <div class="jumbotron">
        <h1>Poll name: <%= pollTitle %></h1>
        <p>Created by: <%= pollEmail %></p>
        <h2>Please rank your choices below by draging and dropping the options.</h2>
        <p>When submitted the options will be scored according to their order from top to bottom.</p>
      </div>

      <div class="panel panel-default">
        <div class="panel-body form-cont">
          <form class="form results-form" action="poll.html" method="post">

            <div class="options">

              <% for (let option in optionsArr) { %>
              <div class="panel panel-default">
                <div class="panel-body options-panel-body">
                  <h3><%= optionsArr[option].option_title %></h3>
                  <p><%= optionsArr[option].description %></p>
                </div>
              </div>
              <% } %>
            </div>
            <input id ="options-submit" class="btn btn-primary" type="submit" name="submit" value="Submit">
          </form>
        </div>
      </div>
    </div>

    <% include ./partials/footer.ejs %>
    <script src="/scripts/ratings-button.js"></script>
    <!-- Dragula -->
    <script src='https://rawgit.com/bevacqua/dragula/master/dist/dragula.js'></script>
    <script type="text/javascript" src="/scripts/poll-dragula.js"></script>
  </body>
</html>
