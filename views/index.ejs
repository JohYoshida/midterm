<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>
    <% include ./partials/head.ejs %>
  </head>

  <body>
    <% include ./partials/header.ejs %>

    <div class="container">
      <div class="jumbotron">
        <h1>Decision Maker</h1>
        <p>Decision making made easy</p>
      </div>

      <div class="panel panel-default">
        <div class="panel-body">
          <form class="form" action="/" method="post">

            <div class="input-group">
              <label for="poll-title">Poll Title</label>
              <input id="poll-title" class="form-control" type="text" name="title" value="" placeholder="title">
            </div>
            <div class="input-group">
              <label for="poll-email">Email</label>
              <input id="poll-email" class="form-control" type="email" name="email" value="" placeholder="email">
            </div>
            <!-- options -->
            <div class="input-group" data-option="1">
              <label for="">Option 1</label>
              <input class="option form-control" type="text" name="option" value="" placeholder="option">
              <input class="option form-control" type="text" name="description" value="" placeholder="description">
            </div>
            <div class="input-group">
              <label for="">Option 2</label>
              <input class="option form-control" type="text" name="option" value="" placeholder="option">
              <input class="option form-control" type="text" name="description" value="" placeholder="description">
            </div>
            <div class="input-group">
              <label for="">Option 3</label>
              <input class="option form-control" type="text" name="option" value="" placeholder="option">
              <input class="option form-control" type="text" name="description" value="" placeholder="description">
            </div>
            <div class="button input-group">
              <input class="btn btn-primary" type="submit" name="submit" value="Submit">
            </div>

          </form>

          <div class="alert alert-danger">
            <!-- alerts go here -->
          </div>
        </div>
      </div>
    </div>

    <% include ./partials/footer.ejs %>
  </body>
</html>
